#stop{:"data-id"=>"#{@stop.stop_id}", :"data-code"=>"#{@stop.stop_code}", :"data-lat"=>"#{@stop.stop_lat}", :"data-lon"=>"#{@stop.stop_lon}"}
  
  .row
    %h2
      %span
        = "Bus stop #{@stop.stop_code}"
      %small
        = @stop.stop_name

  .row
    #next-arrivals.col-md-5.hidden-sm.hidden-xs{ :"data-service-id" => "#{@trip_day}", :"data-day" => "#{Date.current.in_time_zone.to_i}" }
      Loading schedule for #{Date.current.strftime "%m/%d/%Y"}...
    #map.col-md-7.col-sm-12.col-xs-12

  #schedule-controls
    %h3 
      %span.title.hidden
        Timetable
      %span.pull-right
        %button#toggle-timetable.btn.btn-primary.hidden
          Show timetable
        %button#nearest-arrival.btn.hidden
          Jump to upcoming arrivals
          
  #schedule.row{ :"data-service-id" => "#{@trip_day}", :"data-day" => "#{Date.current.in_time_zone.to_i}" }

  = javascript_include_tag 'stops'
